  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Chrome",
      "type": "chrome",
      "request": "launch",
      "runtimeArgs": [
        "--remote-debugging-port=9222"
      ],
      "url": "https://moodle3.local/moodle405/mod/treasurehunt/play.php?id=595",
      "webRoot": "/var/www/html/moodle405",
      "sourceMapPathOverrides": {
        //https://moodle3.local/moodle405/lib/requirejs.php/-1/mod_treasurehunt/play_bootstrap.js
        "/var/www/html/moodle405/mod/treasurehunt/amd/src/*": "${workspaceFolder}/amd/src/*",
        "/var/www/html/moodle405/mod/treasurehunt/amd/build/*": "${workspaceFolder}/amd/build/*",
        "/var/www/html/moodle405/lib/requirejs.php/-1/mod_treasurehunt/play_bootstrap.js": "${workspaceFolder}/amd/src/play_bootstrap.js",
      },
      // "presentation": {
      //   "hidden": true
      // }
    },
    {
      "name": "Attach to Edge",
      "port": 9222,
      "request": "attach",
      "type": "msedge",
      "webRoot": "${workspaceFolder}"
    },
     {
      "name": "Attach to Chrome",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "port": [
        9000
      ]
    },
    {
      "type": "msedge",
      "name": "Launch Microsoft Edge",
      "request": "launch",
      "cleanUp": "wholeBrowser",
      "cascadeTerminateToConfigurations": [
        "Open Edge DevTools"
      ],
      "url": "https://moodle3.local/moodle405/mod/treasurehunt/play.php?id=595",
      "webRoot": "/var/www/html/",
      "presentation": {
        "hidden": true
      }
    },
    {
      "type": "msedge",
      "name": "Launch Microsoft Edge in headless mode",
      "request": "launch",
      "runtimeArgs": [
        "--headless",
        "--remote-debugging-port=9222"
      ],
      "url": "https://moodle3.local/moodle405/mod/treasurehunt/play.php?id=595",
      "presentation": {
        "hidden": true
      }
    },
    {
      "type": "vscode-edge-devtools.debug",
      "name": "Open Edge DevTools",
      "request": "attach",
      "url": "https://moodle3.local/moodle405/mod/treasurehunt/play.php?id=595",
      "presentation": {
        "hidden": true
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch Edge Headless and attach DevTools",
      "configurations": [
        "Launch Microsoft Edge in headless mode",
        "Open Edge DevTools"
      ],
      "stopAll": true
    },
    {
      "name": "Launch Edge and attach DevTools",
      "configurations": [
        "Launch Microsoft Edge",
        "Open Edge DevTools"
      ],
      "stopAll": true,
    }
  ]
}