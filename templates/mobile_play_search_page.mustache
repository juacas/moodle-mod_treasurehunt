{{=<% %>=}}
<div class="treasurehunt-play-search-page">

  <ion-searchbar class="searchbar" placeholder="{{'plugin.mod_treasurehunt.findplace' | translate}}" [(ngModel)]="searchText"
    (ionInput)="searchLocation()" (ionCancel)="cancelSearch()">
  </ion-searchbar>

  <!-- Show loading spinner on search -->
  <div class="loading-spinner" *ngIf="loading">
    <ion-spinner></ion-spinner>
  </div>

  <ion-list *ngIf="!loading">
    <ion-item text-wrap *ngIf="places.length === 0 && searchText.length > minSearch">
      {{'plugin.mod_treasurehunt.noresults' | translate}}
    </ion-item>
    <button ion-item text-wrap *ngFor="let place of places" (click)="zoomToPlace(place)">
      <ion-icon name="pin" item-start color="primary"></ion-icon>
      <ion-label>{{ place.display_name }}</ion-label>
    </button>
  </ion-list>

</div>